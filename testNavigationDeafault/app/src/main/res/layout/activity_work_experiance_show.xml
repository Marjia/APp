<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkExperianceShow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            app:cardCornerRadius="10dp"
            android:elevation="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:background="#FFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="right">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Work Experiance"
                            android:layout_gravity="left"
                            android:layout_margin="2dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right">

                        <ImageButton
                            android:id="@+id/work_experiance_edit_btn"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/edit"
                            android:layout_margin="5dp"
                            android:layout_marginRight="4dp"
                            android:layout_gravity="right"
                            android:foregroundGravity="right"
                            />
                        <ImageButton
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/add"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="4dp"
                            android:layout_gravity="right"
                            android:foregroundGravity="right"
                            />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorBorderLayout"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_margin="4dp"
                    android:padding="2dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Designation"
                        android:layout_margin="2dp"
                        android:textSize="13dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Teacher"
                        android:textColor="#000"
                        android:textSize="13dp"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="company Name"
                        android:layout_margin="2dp"
                        android:textSize="13dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Institute of Science and Technology"
                        android:textSize="13dp"
                        android:textColor="#000"
                        android:layout_margin="2dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duties/Responsibility"
                        android:layout_margin="2dp"
                        android:textSize="13dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" I am a Mobile App Developer at Wahyd Private Limited .I am expert in developing Iphone and Ipad apps.Beside this i have good skills in asp.net. I started my professional career as early as i could due to eagerness to explore new technologies .My professional expertise are enhanced by the following attitude "
                        android:textSize="13dp"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duration"
                        android:layout_margin="2dp"
                        android:textSize="13dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2010-2015"
                        android:textColor="#000"
                        android:textSize="13dp"
                        android:layout_margin="2dp"/>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>