<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true" android:drawable="@drawable/respblack" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <corners android:radius="10dp" />
            <size
                android:width="100dp"
                android:height="100dp"/>
        </shape>
    </item>
    <item android:state_focused="false" android:drawable="@drawable/responsiveblueupdate">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval"
            >
            <corners android:radius="10dp" />
            <size
                android:width="100dp"
                android:height="100dp"/>
        </shape>
    </item>

</selector>