        <ListView
            android:id="@+id/chocolate_one_listview_id"
            android:layout_width="match_parent"
            android:layout_height="4250sp"
            android:layout_below="@+id/up_txt"
            android:layout_margin="2dp"
            android:padding="2dp"></ListView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/cardViewBackgroundColor"
            app:cardElevation="4dp"
            app:cardMaxElevation="6dp"
            android:layout_below="@+id/chocolate_one_listview_id">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/submit_quate_txt_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit a Quote"
                    android:textSize="17dp"
                    android:padding="3dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="italic"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@color/colorTableColumn"
                    />
                <include
                    layout="@layout/footerlayout"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>






