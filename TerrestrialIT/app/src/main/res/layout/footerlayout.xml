        <!--</android.support.v7.widget.CardView>-->


        <ImageView
            android:id="@+id/facebook_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebookicon"
            android:layout_margin="4dp"/>
        <ImageView
            android:id="@+id/twitter_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/twittericon"
            android:layout_toEndOf="@id/facebook_id"
            android:layout_margin="4dp"
            android:layout_toRightOf="@id/facebook_id" />
        <ImageView
            android:id="@+id/googleplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/googleicon"
            android:layout_toEndOf="@+id/twitter_id"
            android:layout_margin="4dp"
            android:layout_toRightOf="@+id/twitter_id" />
        <ImageView
            android:id="@+id/linkedin_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/linkedinicon"
            android:layout_toEndOf="@+id/googleplus"
            android:layout_margin="4dp"
            android:layout_toRightOf="@+id/googleplus" />
        <ImageView
            android:id="@+id/skype_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/skypeicon"
            android:layout_toEndOf="@id/linkedin_id"
            android:layout_margin="4dp"
            android:layout_toRightOf="@id/linkedin_id" />

